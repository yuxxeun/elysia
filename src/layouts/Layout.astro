---
import Footer from "../components/common/Footer.astro";
import Navigation from "../components/common/Navigation.astro";
import "../styles/app.css";
interface Props {
	title: string;
}

const { title } = Astro.props;

export const prerender = true;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-slate-100 mx-auto max-w-2xl my-5 bg-slate-950 h-full w-full bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]">
		<Navigation/>
			<main class="my-10">
				<slot />
			</main>
		<Footer/>
	</body>
</html>
